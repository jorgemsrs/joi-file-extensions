{
    "all": true,
	  "per-file": true,
    "cache": true,
    "check-coverage": true,
    "include": [
        "lib/**/*.js"
    ],
    "per-file": true,
    "produce-source-map": true,
    "report-dir": "coverage",
    "reporter": [
        "lcov",
        "text-summary"
    ],
		"branches": 50,
		"lines": 50,
		"functions": 50,
		"statements": 50,
		"watermarks": {
        "branches": [
            50,
            80
        ],
        "functions": [
            50,
            80
        ],
        "lines": [
            50,
            80
        ],
        "statements": [
            50,
            80
        ]
    }
}
